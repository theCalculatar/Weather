<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="254dp"
        android:alpha="0.7"
        android:orientation="horizontal"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/id_cityEdit"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:hint="@string/enter_search"
        android:textSize="16sp"
        android:background="@drawable/backgroud_round_18dp_outline"
        android:textColor="@color/white"
        android:gravity="center" />

    <TextView
        android:id="@+id/id_citySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_200"
        android:layout_below="@id/id_cityEdit"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/backgroud_round_18dp"

        android:text="@string/action_search" />


</RelativeLayout>